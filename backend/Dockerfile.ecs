FROM --platform=linux/amd64 python:3.12-slim

WORKDIR /app

COPY app ./app

RUN pip install --no-cache-dir \
    fastapi==0.115.0 \
    uvicorn[standard]==0.34.0 \
    pydantic-settings==2.10.0 \
    httpx==0.28.0 \
    python-multipart==0.0.20

ENV PYTHONPATH=/app

EXPOSE 8000

CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000"]
